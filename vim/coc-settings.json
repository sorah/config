  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"]
    },
    "ruby": {
      "command": "ruby-lsp",
      "filetypes": ["ruby"]
    },
    "jsonnet": {
      "command": "jsonnet-language-server",
      "args": [],
      "filetypes": ["jsonnet"]
    }
